name: Build Nebula Pro
on: [push, workflow_dispatch]

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Fix Memory and Swap
        run: |
          # Удаляем старый файл, если он есть, и создаем новый в /mnt (там обычно больше места)
          sudo swapoff -a || true
          sudo rm -f /mnt/swapfile
          sudo fallocate -l 10G /mnt/swapfile
          sudo chmod 600 /mnt/swapfile
          sudo mkswap /mnt/swapfile
          sudo swapon /mnt/swapfile
          free -h

      - uses: actions/setup-python@v5
        with:
          python-version: '3.10'

      - name: Install System Dependencies
        run: |
          sudo apt update
          # Добавлен gettext (для autopoint) и дополнительные инструменты для сборки тяжелых библиотек
          sudo apt install -y git zip unzip openjdk-17-jdk autoconf libtool pkg-config zlib1g-dev \
          libncurses5-dev libncursesw5-dev libtinfo6 cmake libffi-dev libssl-dev ccache libltdl-dev \
          patch python3-setuptools gettext
          pip install --upgrade pip
          pip install buildozer "cython<3.0" virtualenv

      - name: Build with Buildozer
        run: |
          # Очистка кэша перед сборкой, чтобы убрать следы ошибки "Text file busy"
          buildozer android clean
          # Запуск сборки
          yes | buildozer android debug
        env:
          # Увеличиваем лимиты для тяжелых нейросетевых библиотек
          _JAVA_OPTIONS: "-Xmx4g"

      - name: Upload Artifact
        uses: actions/upload-artifact@v4
        with:
          name: Nebula-Evolution-Pro
          path: bin/*.apk
