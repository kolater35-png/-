name: Build Android APK
on: 
  push:
    branches: [ main ]
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v4  # Обновлено до v4

      - name: Set up Python
        uses: actions/setup-python@v5 # Обновлено до v5
        with:
          python-version: '3.10'

      - name: Install dependencies
        run: |
          sudo apt update
          sudo apt install -y git zip unzip openjdk-17-jdk autoconf libtool pkg-config zlib1g-dev libncurses5-dev libncursesw5-dev libtinfo5 cmake libffi-dev libssl-dev ccache

      - name: Build with Buildozer
        # Используем официальный и актуальный экшен
        uses: Enteee/buildozer-action@v1.2.4
        with:
          buildozer_version: master
          command: android debug
          
      - name: Upload APK
        uses: actions/upload-artifact@v4 # Обновлено до v4 (исправляет твою ошибку!)
        with:
          name: NebulaAI-Pobeda-APK
          path: bin/*.apk
